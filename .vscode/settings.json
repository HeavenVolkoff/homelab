{
  // Files
  "files.exclude": {
    "**/.git": true,
    "**/.cache": true,
    ".eslintcache": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.zig-cache": true,
    "**/*.tsbuildinfo": true,
    "**/*.d.{js,ts,cjs,cts,mjs,mts}.map": true
  },
  "files.associations": {
    "*.bu": "yaml",
    "*.shlib": "shellscript"
  },

  // Editor
  "editor.rulers": [80, 100, 120],
  "editor.insertSpaces": true,
  "editor.formatOnSave": false,
  "editor.formatOnSaveMode": "file",

  // Search
  "search.exclude": {
    ".git": true,
    "build": true,
    ".cache": true,
    "zig-out": true,
    ".zig-cache": true,
    "node_modules": true
  },
  "search.smartCase": true,
  "search.followSymlinks": false,
  "search.useIgnoreFiles": true,
  "search.seedWithNearestWord": true,
  "search.quickOpen.includeSymbols": false,

  // Exporer
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "Dockerfile": ".dockerignore",
    "README.md": "CONTRIBUTING.md, CODE_OF_CONDUCT.md, SECURITY.md"
  },

  // Docker
  "docker.languageserver.formatter.ignoreMultilineInstructions": true,

  // Git
  "git.ignoreSubmodules": true,
  "git.detectSubmodules": false,
  "git.ignoreLimitWarning": true,
  "git.autoRepositoryDetection": "openEditors",

  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.unicodeHighlight.ambiguousCharacters": true,
    "editor.unicodeHighlight.invisibleCharacters": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // Systemd
  "systemd.style.boolean": "on-off",
  "systemd.podman.completion": true,
  "systemd.directive-keys.custom": [
    // https://docs.podman.io/en/latest/markdown/podman-systemd.unit.5.html#memory
    "Memory",
    // https://docs.podman.io/en/latest/markdown/podman-systemd.unit.5.html#networkdeleteonstop-defaults-to-false
    "NetworkDeleteOnStop"
  ],

  // YAML
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Spell Checker
  "cSpell.allowCompoundWords": true,
  "cSpell.language": "en_US,pt_PT",
  "cSpell.ignoreWords": [
    "APT_KEY_DONT_WARN_ON_DANGEROUS_USAGE",
    "DontWarn",
    "PGID",
    "PUID",
    "TMPDIR",
    "XBOOTLDR",
    "autorebase",
    "avdump",
    "buildah",
    "chrony",
    "cmdline",
    "cpus",
    "dind",
    "dinp",
    "debian",
    "distroless",
    "dorny",
    "ecdsa",
    "firewalld",
    "getent",
    "gnupg",
    "heavenvolkoff",
    "igmp",
    "inet",
    "innodb",
    "inotify",
    "jesec",
    "linux",
    "lucaslorentz",
    "luks",
    "mariadb",
    "mikefarah",
    "minidlna",
    "mkfifo",
    "mysql",
    "nftables",
    "nmconnection",
    "nvme",
    "openrc",
    "pberkel",
    "pigz",
    "proxmox",
    "redis",
    "relatime",
    "reno",
    "resolv.conf",
    "shlib",
    "shoko",
    "shokoanime",
    "socat",
    "stribika",
    "tonistiigi",
    "xorg",
    "zram",
    "zstd"
  ],
  "cSpell.words": [
    "Adata",
    "HeavenVolkoff",
    "UEFI",
    "brasilia-uno",
    "btrfs",
    "coreutils",
    "distrobox",
    "glusterfs",
    "itaipava-uno",
    "oracle-nueve",
    "oracle-seis",
    "oracle-tres",
    "oracle-uno",
    "ostree",
    "PiKVM",
    "uClibc",
    "ucore",
    "vaultwarden"
  ],
  "ltex.dictionary": {
    "en-US": ["Distrobox", "GlusterFS", "PiKVM", "Podman", "Tailscale", "Technitium", "uCore"]
  }
}
